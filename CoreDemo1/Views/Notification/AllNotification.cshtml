@using EntityLayer.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1 class="text-center text-primary mt-3">📢 Tüm Bildirimler</h1>

<div class="container mt-4">
    <table class="table table-striped table-hover table-bordered text-center shadow-sm">
        <thead class="bg-light">
            <tr>
                <th>#</th>
                <th>Bildirim</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.NotificationID</strong></td>
                    <td>@item.NotificationDetails</td>
                    <td>@item.NotificationDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
