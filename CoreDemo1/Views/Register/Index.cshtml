@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Yazar Kayıt Sayfası</h3> 
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using (Html.BeginForm("Index", "Register", FormMethod.Post))
				{


					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Adınız soyadınız</label>
							@Html.TextBoxFor(w =>w.WriterName, new {@class="form-control"})
							@Html.ValidationMessageFor(w => w.WriterName,null, new { @class = "text-danger" } )
							@* <input type="text" class="form-control" id="validationDefault01" placeholder="" name="WriterName" required=""> *@

						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">Mail Adresi</label>
							@Html.TextBoxFor(w => w.WriterMail, new { @class = "form-control" })
							@Html.ValidationMessageFor(w => w.WriterMail, null, new { @class = "text-danger" })
							@* <input type="email" class="form-control" name="WriterMail" id="validationDefault02" placeholder="" required=""> *@
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							@Html.TextBoxFor(w => w.WriterPassword, new { @class = "form-control" })
							@Html.ValidationMessageFor(w => w.WriterPassword, null, new { @class = "text-danger" })
@* 							<input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">
 *@						</div>
						<div class="form-group col-md-6">
							<label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
							@Html.TextBoxFor(w => w.WriterImage, new { @class = "form-control" })
							@Html.ValidationMessageFor(w => w.WriterImage, null, new { @class = "text-danger" })
@* 							<input type="text" class="form-control" name="WriterImage" id="password2" placeholder="" required="">
 *@						</div>

					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					<p>
						<a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
					</p>
				}

			</div>
		</div>
	</div>
	<br>
	<script> 
		$('#btn1').click(function (){
			Swal.fire("Site Kabul Şartları","Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları gönderilmeye devam edecektir. E-posta bülteninden çıkmak için mail ileti dizisini durdurabilirsiniz. Şifreniiz ve Mail adresiniz şifrelenmiş fortmatta herhangi bir kullanıcının görmeyeceği şekilde veri tabanlarımızda saklanmaktadır");
		});
	</script>
    </br>
</section>