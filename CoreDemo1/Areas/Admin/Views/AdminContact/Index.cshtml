@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>



<body>
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h2>İletişim</h2>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>Konu</th>
                                    <th>İçerik</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <th>@item.ContactID</th>
                                        <td>@item.ContactUserName</td>
                                        <td>@item.ContactSubject</td>
                                        <td>@item.ContactMessage</td>
                                        <td class="text-navy"> <i class="fa fa-calendar "></i> @(((DateTime)item.ContactDate).ToString("dd-MMM-yyyy")) </td>
                                        <td><a href="/Admin/AdminContact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



</body>

</html>



