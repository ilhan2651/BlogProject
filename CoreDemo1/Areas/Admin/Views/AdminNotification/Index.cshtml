@using EntityLayer.Concrete
@model List<Notification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h2>Bildirimler</h2>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Bilidirim Konusu</th>
                                    <th>İçerik</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <th>@item.NotificationID</th>
                                        <td>@item.NotificationType</td>
                                        <td>@item.NotificationDetails</td>
                                        <td class="text-navy"> <i class="fa fa-calendar "></i> @(((DateTime)item.NotificationDate).ToString("dd-MMM-yyyy")) </td>
                                        <td><a href="/Admin/AdminNotification/DeleteNotification/@item.NotificationID" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/AdminNotification/CreateNotification/" class="btn btn-primary">Yeni Bildirim Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>



</body>

</html>